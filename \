import config from './Config.ts'
import PocketBase from 'pocketbase'

export const client = new PocketBase(import.meta.env.POCKETBASE_URL)

const defaultOptions = {
  page: 1,
  perPage: 10,
  options = {}
}

export default {
  async getProducts (options = defaultOptions) {
    return client.Records.getList(options.page, options.perPage, options.options)
  }
}
